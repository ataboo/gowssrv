{{define "content"}}
    <h1>Login</h1>
    <form class="form-inline" action="/auth" method="POST">
        <div class="input-group">
            <input class="form-control mb-2 mr-sm-2 mb-sm-0" type="text" name="username" placeholder="Username"/>
        </div>
        <div class="input-group"> 
            <input class="form-control mb-2 mr-sm-2 mb-sm-0" type="password" name="password" placeholder="Password"/>
        </div>
        <button class="btn btn-primary" type="submit">Login</button>
    </form>
{{end}}